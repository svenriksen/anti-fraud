{
    "manifest_version": 2,
    "version": "0.1",
    "name": "Anti Fraud by Kai",
    "description": "A extension to check if the website you enter is trying to scam you or not.",
    "content_scripts": 
    [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
     },
    "browser_action": 
    {
        "default_popup": "popup.html"
    },
    "permissions": ["tabs"]

  }